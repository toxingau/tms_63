<% provide :title, t("admin.course_index") %>
<h1><%= t "admin.course" %></h1>

<div class="row">
  <div class="center">
    <%= link_to t("admin.createcourse"), new_admin_course_path,
      class: "btn btn-primary btn-lg" %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th><%= t "subjects.name" %></th>
          <th><%= t "subjects.description" %></th>
          <th><%= t "courses.action" %></th>
          <th><%= t "subjects.status" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render "course" %>
      </tbody>
    </table>
  </div>
</div>
